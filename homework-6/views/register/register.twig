{% extends 'layout.twig' %}

{% block content %}
    <form method="POST" name="r_form" action="#">

        {% if success %}
            <div class='success'>{{ success  }}</div>
        {% endif %}
        {% if error %}
            <div class='error'>{{ error  }}</div>
        {% endif %}
        <p>Логин:<br/>
            <input type="text" name="login" placeholder="логин" value="{{ postlogin }}"/>
        </p>
        <p>Email:<br/>
            <input type="email" name="email" placeholder="email" value="{{ email }}"/>
        </p>
        <p>Пароль:<br/>
            <input type="password" name="password" placeholder="пароль" value="{{ password }}"/>
        </p>
        <p>Пароль(повтор):<br/>
            <input type="password" name="password2" placeholder="пароль"/>
        </p>
        <div class="g-recaptcha" data-sitekey="6LcAghsUAAAAAEph1u7_MLmKLMWNYSfyInPNb1-O"></div>
        <button type="submit" name="reg_up">Регистрация</button>
    </form>
{% endblock %}



